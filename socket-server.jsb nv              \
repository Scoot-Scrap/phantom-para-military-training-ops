// socket-server.js
const { createServer } = require("http");
const { Server } = require("socket.io");

const HTTP_PORT = process.env.SOCKET_PORT || 3001;

// Create a plain HTTP server
const httpServer = createServer();

// Attach Socket.IO to it
const io = new Server(httpServer, {
  cors: { origin: "*" }
});

io.on("connection", socket => {
  console.log("Client connected:", socket.id);

  // Relay any "mission update" to all clients
  socket.on("mission update", msg => {
    io.emit("mission update", msg);
  });

  socket.on("disconnect", () => {
    console.log("Client disconnected:", socket.id);
  });
});

httpServer.listen(HTTP_PORT, () => {
  console.log(`ðŸš€ Socket.IO server listening on port ${HTTP_PORT}`);
});